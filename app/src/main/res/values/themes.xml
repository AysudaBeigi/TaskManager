<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TaskManager" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowBackground">@color/peach_86</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_75</item>
        <item name="colorPrimaryVariant">@color/peach_54</item>
        <item name="colorOnPrimary">@color/purple_89</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_35</item>
        <item name="colorOnSecondary">@color/blue_35</item>
        <item name="colorSecondaryVariant">@color/blue_86</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="TextStyle">
        <item name="android:textColor">@color/black_00</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="Widget.AppTheme.TextInputLayout.FilledBox.Dense"
        parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="errorIconDrawable">@null</item>
        <item name="hintTextColor">@color/purple_89</item>
        <item name="boxBackgroundColor">@color/purple_86</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="errorTextColor">@color/orange_92</item>
        <item name="colorControlActivated">@color/orange_92</item>
    </style>
</resources>